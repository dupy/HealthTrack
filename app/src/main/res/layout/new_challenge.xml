<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_deep_teal_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_ch_id"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".NewChallenge">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back"
            android:id="@+id/button6"
            android:background="#292eb1"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New Challenge"
            android:id="@+id/textView4"
            android:background="#292eb1"
            android:textSize="35dp"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:paddingTop="4dp"
            android:autoText="false" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To:"
        android:id="@+id/to_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-15dp"
        android:layout_marginLeft="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friends_spinner"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deadline:"
        android:id="@+id/dl_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:inputType="date"
        android:background="#ffffff"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kcal/day"
        android:id="@+id/kcal_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#ffffff"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/kcal_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points wagered"
        android:id="@+id/points_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#ffffff"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/points_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Challenge"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/start_ch_button"
        android:layout_marginTop="80dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="15dp"
        android:textAlignment="center"
        android:padding="7dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>